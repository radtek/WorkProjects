{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "arm-none-eabi-g++.exe -g -std=c++14 -O0 -mfloat-abi=soft -mcpu=cortex-m3 -mthumb main.cpp startup_stm32f103xb.s -o main.elf -TSTM32F103XB_FLASH.ld --specs=nosys.specs",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "make all",
            "type": "shell",
            "command": "make",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": ["$gcc"]
        },

    ]
}